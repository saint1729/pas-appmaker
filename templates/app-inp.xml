<?xml version="1.0" encoding="UTF-8"?>
<TemplateApplicationInput xmlns="http://schemas.altair.com/pbs/2007/02/app-def" xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <ApplicationId>APPLICATION_ID</ApplicationId>
    <ApplicationName>APPLICATION_NAME</ApplicationName>

    <ArgumentChoice>
        <ArgumentString>
            <Name>JOB_NAME</Name>
            <Description>The name of the job.</Description>
            <DisplayName>Job Name</DisplayName>
            <InputRequired>true</InputRequired>
        </ArgumentString>
    </ArgumentChoice>
    
    <ArgumentChoice>
        <ArgumentStringEnumerated>
            <Name>QUEUE</Name>
            <Description>Specify your desired queue.</Description>
            <DisplayName>Queue</DisplayName>
            <InputRequired>false</InputRequired>
            <Option>workq</Option>
        </ArgumentStringEnumerated>
    </ArgumentChoice>

    <!-- PAS_RESOURCE_SELECT BEGIN -->
    <ArgumentChoice>
        <ArgumentInt>
            <Name>SELECT</Name>
            <Description>The total number of processors.</Description>
            <DisplayName>Select</DisplayName>
            <InputRequired>true</InputRequired>
            <LowerBound>1</LowerBound>
            <Value>1</Value>
        </ArgumentInt>
    </ArgumentChoice>
    <!-- PAS_RESOURCE_SELECT END -->

    <!-- PAS_RESOURCE_NCPUS BEGIN -->
    <ArgumentChoice>
        <ArgumentInt>
            <Name>NCPUS</Name>
            <Description>The total number of processors.</Description>
            <DisplayName>Number of Processors</DisplayName>
            <InputRequired>true</InputRequired>
            <LowerBound>1</LowerBound>
            <Value>1</Value>
        </ArgumentInt>
    </ArgumentChoice>
    <!-- PAS_RESOURCE_NCPUS END -->

    <!-- PAS_RESOURCE_MEM BEGIN -->
    <ArgumentChoice>
        <ArgumentInt>
            <Name>MEM</Name>
            <Description>The total number of processors.</Description>
            <DisplayName>Memory</DisplayName>
            <InputRequired>true</InputRequired>
            <LowerBound>1</LowerBound>
            <Value>1</Value>
        </ArgumentInt>
    </ArgumentChoice>
    <!-- PAS_RESOURCE_MEM END -->

    <!-- PAS_RESOURCE_PLACE BEGIN -->
    <ArgumentChoice>
        <ArgumentStringEnumerated>
            <Name>PLACE</Name>
            <Description>The placement of job chunks.</Description>
            <DisplayName>Placement of Chunks</DisplayName>
            <InputRequired>false</InputRequired>
            <Option>pack</Option>
            <Option>free</Option>
            <Option>scatter</Option>
            <Value>free</Value>
        </ArgumentStringEnumerated>
    </ArgumentChoice>
    <!-- PAS_RESOURCE_PLACE END -->

    <!-- PAS_ATTRIBUTE_DEPEND BEGIN -->
    <ArgumentChoice>
        <ArgumentStringEnumerated>
            <Name>DEPEND</Name>
            <Description>Specify your desired queue.</Description>
            <DisplayName>Dependencies</DisplayName>
            <InputRequired>false</InputRequired>
            <Option>workq</Option>
        </ArgumentStringEnumerated>
    </ArgumentChoice>
    <!-- PAS_ATTRIBUTE_DEPEND END -->

    <!-- PAS_ATTRIBUTE_ADVANCED BEGIN -->
    <ArgumentChoice>
        <ArgumentStringEnumerated>
            <Name>DEPEND</Name>
            <Description>Specify your desired queue.</Description>
            <DisplayName>Dependencies</DisplayName>
            <InputRequired>false</InputRequired>
            <Option>workq</Option>
        </ArgumentStringEnumerated>
    </ArgumentChoice>
    <!-- PAS_ATTRIBUTE_ADVANCED END -->

    <!-- PAS_ENVIRONMENT BEGIN -->
    <ArgumentChoice>
        <ArgumentStringEnumerated>
            <Name>ENVIRONMENT</Name>
            <Description>The placement of job chunks.</Description>
            <DisplayName>Environment</DisplayName>
            <InputRequired>false</InputRequired>
            <Value>JOB_DIR=PBS_O_WORKDIR</Value>
        </ArgumentStringEnumerated>
    </ArgumentChoice>
    <!-- PAS_ENVIRONMENT END -->
    
    <!-- PAS_SCRIPT BEGIN -->
    <ArgumentChoice>
        <ArgumentFileName>
            <Name>SCRIPT</Name>
            <Description>The Job Script to run.</Description>
            <DisplayName>Executable</DisplayName>
            <InputRequired>true</InputRequired>
        </ArgumentFileName>
    </ArgumentChoice>
    <!-- PAS_SCRIPT END -->
  
    <!-- PAS_ARGUMENTS -->
    <ArgumentChoice>
        <ArgumentString>
            <Name>ARGUMENTS</Name>
            <Description>Pass specific arguments to the Job Script.</Description>
            <DisplayName>Arguments</DisplayName>
            <InputRequired>false</InputRequired>
        </ArgumentString>
    </ArgumentChoice>
    <!-- PAS_ARGUMENTS -->
  
    <!-- PAS_INPUT_FILE BEGIN -->
    <ArgumentChoice>
        <ArgumentFileName>
            <Name>INPUT_FILE</Name>
            <Description>
                A standalone input file or ZIP archive. This option supports the automatic detection of master, starter and engine files.
            </Description>
            <DisplayName>Input File</DisplayName>
            <InputRequired>false</InputRequired>
        </ArgumentFileName>
    </ArgumentChoice>
    <!-- PAS_INPUT_FILE END -->
  
    <!-- PAS_INCLUDE_FILES BEGIN -->  
    <ArgumentChoice>
        <ArgumentFileNameMulti>
            <Name>INCLUDE_FILES</Name>
            <Description>Files to be included with the Job Script.</Description>
            <DisplayName>Include Files</DisplayName>
            <InputRequired>false</InputRequired>
        </ArgumentFileNameMulti>
    </ArgumentChoice>
    <!-- PAS_INCLUDE_FILES END -->

    <ArgumentChoice>
        <ArgumentDirectoryName>
            <Name>SUBMISSION_DIRECTORY</Name>
            <Description>Where your job files will initially be staged, and results will be returned upon job completion.</Description>
            <DisplayName>Staging Directory</DisplayName>
            <InputRequired>false</InputRequired>
        </ArgumentDirectoryName>
    </ArgumentChoice>

    <!-- PAS_ENABLE_PRE_STAGING BEGIN -->
    <ArgumentChoice>
        <ArgumentBooleanWithDescription>
            <Name>ENABLE_PRE_STAGING</Name>
            <Description>Enable logging. Useful for development and debugging.</Description>
            <DisplayName>Enable Pre-Staging</DisplayName>
            <InputRequired>false</InputRequired>
            <FeatureEnabled>true</FeatureEnabled>
        </ArgumentBooleanWithDescription>
    </ArgumentChoice>
    <!-- PAS_ENABLE_PRE_STAGING END -->
  
    <!-- PAS_ENABLE_LOGGING BEGIN -->
    <ArgumentChoice>
        <ArgumentBooleanWithDescription>
            <Name>ENABLE_LOGGING</Name>
            <Description>Enable logging. Useful for development and debugging.</Description>
            <DisplayName>Enable Logging</DisplayName>
            <InputRequired>false</InputRequired>
            <FeatureEnabled>true</FeatureEnabled>
        </ArgumentBooleanWithDescription>
    </ArgumentChoice>
    <!-- PAS_ENABLE_LOGGING END -->

    <!-- PAS_ENABLE_COMPRESS_RESULTS BEGIN -->
    <ArgumentChoice>
        <ArgumentBooleanWithDescription>
            <Name>COMPRESS_RESULTS</Name>
            <Description>Compress job results into a single ZIP file.</Description>
            <DisplayName>Compress Results</DisplayName>
            <InputRequired>false</InputRequired>
        </ArgumentBooleanWithDescription>
    </ArgumentChoice>
    <!-- PAS_ENABLE_COMPRESS_RESULTS BEGIN -->
    
</TemplateApplicationInput>