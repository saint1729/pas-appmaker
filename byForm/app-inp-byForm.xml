<?xml version="1.0" encoding="UTF-8"?>
<TemplateApplicationInput xmlns="http://schemas.altair.com/pbs/2007/02/app-def" xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <ApplicationId>byForm</ApplicationId>
  <ApplicationName>By Form</ApplicationName>
  <ArgumentChoice>
    <ArgumentStringEnumerated>
      <Name>QUEUE</Name>
      <Description>Specify your desired queue.</Description>
      <DisplayName>Queue</DisplayName>
      <InputRequired>false</InputRequired>
      <Option>workq</Option>
    </ArgumentStringEnumerated>
  </ArgumentChoice>
  <ArgumentChoice>
    <ArgumentInt>
      <Name>NCPUS</Name>
      <Description>The total number of processors.</Description>
      <DisplayName>Number of Processors</DisplayName>
      <InputRequired>true</InputRequired>
      <LowerBound>1</LowerBound>
      <Value>1</Value>
    </ArgumentInt>
  </ArgumentChoice>
  <ArgumentChoice>
    <ArgumentInt>
      <Name>CHUNKS</Name>
      <Description>The total number of job chunks.</Description>
      <DisplayName>Number of Chunks</DisplayName>
      <InputRequired>false</InputRequired>
      <LowerBound>1</LowerBound>
      <Value>1</Value>
    </ArgumentInt>
  </ArgumentChoice>
  <ArgumentChoice>
    <ArgumentStringEnumerated>
      <Name>CHUNK_PLACEMENT</Name>
      <Description>The placement of job chunks.</Description>
      <DisplayName>Placement of Chunks</DisplayName>
      <InputRequired>false</InputRequired>
      <Option>pack</Option>
      <Option>free</Option>
      <Option>scatter</Option>
      <Value>free</Value>
    </ArgumentStringEnumerated>
  </ArgumentChoice>
  <ArgumentChoice>
    <ArgumentInt>
      <Name>MEMORY</Name>
      <Description>The total physical memory requested.</Description>
      <DisplayName>Amount of Memory (MB)</DisplayName>
      <InputRequired>true</InputRequired>
      <LowerBound>10</LowerBound>
      <Value>10</Value>
    </ArgumentInt>
  </ArgumentChoice>
  <ArgumentChoice>
    <ArgumentStringEnumerated>
      <Name>MEMORY_PLACEMENT</Name>
      <Description>The physical memory requested per chunk.</Description>
      <DisplayName>Memory Per Chunk</DisplayName>
      <InputRequired>false</InputRequired>
      <Option>true</Option>
      <Option>false</Option>
      <Value>true</Value>
    </ArgumentStringEnumerated>
  </ArgumentChoice>
  <ArgumentChoice>
    <ArgumentString>
      <Name>JOB_NAME</Name>
      <Description>The name of the job.</Description>
      <DisplayName>Job Name</DisplayName>
      <InputRequired>true</InputRequired>
    </ArgumentString>
  </ArgumentChoice>
  <ArgumentChoice>
    <ArgumentFileName>
      <Name>JOB_SCRIPT</Name>
      <Description>The Job Script to run.</Description>
      <DisplayName>Job Script</DisplayName>
      <InputRequired>true</InputRequired>
    </ArgumentFileName>
  </ArgumentChoice>
  <ArgumentChoice>
    <ArgumentString>
      <Name>JOB_ARGS</Name>
      <Description>Pass specific arguments to the Job Script.</Description>
      <DisplayName>Job Script Arguments</DisplayName>
      <InputRequired>false</InputRequired>
    </ArgumentString>
  </ArgumentChoice>
  <ArgumentChoice>
    <ArgumentFileName>
      <Name>INPUT_FILE</Name>
      <Description>
        A standalone input file or ZIP archive. This option supports the automatic detection of master, starter and engine files.
      </Description>
      <DisplayName>Input File</DisplayName>
      <InputRequired>false</InputRequired>
    </ArgumentFileName>
  </ArgumentChoice>
  <ArgumentChoice>
    <ArgumentFileNameMulti>
      <Name>INCLUDE_FILES</Name>
      <Description>Files to be included with the Job Script.</Description>
      <DisplayName>Include Files</DisplayName>
      <InputRequired>false</InputRequired>
    </ArgumentFileNameMulti>
  </ArgumentChoice>
  <ArgumentChoice>
    <ArgumentDirectoryName>
      <Name>SUBMISSION_DIRECTORY</Name>
      <Description>Where your job files will initially be staged, and results will be returned upon job completion.</Description>
      <DisplayName>Staging Directory</DisplayName>
      <InputRequired>false</InputRequired>
    </ArgumentDirectoryName>
  </ArgumentChoice>
  <ArgumentChoice>
    <ArgumentBooleanWithDescription>
      <Name>ENABLE_LOGGING</Name>
      <Description>Enable logging. Useful for development and debugging.</Description>
      <DisplayName>Enable Logging</DisplayName>
      <InputRequired>false</InputRequired>
      <FeatureEnabled>true</FeatureEnabled>
    </ArgumentBooleanWithDescription>
  </ArgumentChoice>
  <ArgumentChoice>
    <ArgumentBooleanWithDescription>
      <Name>COMPRESS_RESULTS</Name>
      <Description>Compress job results into a single ZIP file.</Description>
      <DisplayName>Compress Results</DisplayName>
      <InputRequired>false</InputRequired>
    </ArgumentBooleanWithDescription>
  </ArgumentChoice>
</TemplateApplicationInput>
