<?xml version="1.0" encoding="UTF-8"?>
<TemplateApplicationInput xmlns="http://schemas.altair.com/pbs/2007/02/app-def" xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <ApplicationId>APP_NAME</ApplicationId>
  <ApplicationName>APP_NAME</ApplicationName>
  <!-- Resource &amp; Attribute Options -->
  <ArgumentChoice>
    <ArgumentString>
      <Name>JOB_NAME</Name>
      <Description>The name of the job.</Description>
      <DisplayName>Job Name</DisplayName>
      <InputRequired>true</InputRequired>
    </ArgumentString>
  </ArgumentChoice>
  <ArgumentChoice>
    <ArgumentStringEnumerated>
      <Name>QUEUE</Name>
      <Description>Specify your desired queue.</Description>
      <DisplayName>Queue</DisplayName>
      <InputRequired>false</InputRequired>
      <Option>workq</Option>
    </ArgumentStringEnumerated>
  </ArgumentChoice>
  <!-- PAS_STATEMENT BEGIN -->
  <ArgumentChoice>
    <ArgumentString>
      <Name>STATEMENT</Name>
      <Description>Provide qsub select statement.</Description>
      <DisplayName>Select Statement</DisplayName>
      <InputRequired>true</InputRequired>
      <Value>select=1:ncpus=2:mem=1gb</Value>
    </ArgumentString>
  </ArgumentChoice>
  <!-- PAS_STATEMENT END -->
  <!-- PAS_SELECT BEGIN -->
  <ArgumentChoice>
    <ArgumentInt>
      <Name>SELECT</Name>
      <Description>The number of chunks (nodes)</Description>
      <DisplayName>Select (Nodes/Chunks)</DisplayName>
      <InputRequired>true</InputRequired>
      <LowerBound>1</LowerBound>
      <UpperBound>256</UpperBound>
      <Value>1</Value>
    </ArgumentInt>
  </ArgumentChoice>
  <!-- PAS_SELECT END -->
  <!-- PAS_NCPUS BEGIN -->
  <ArgumentChoice>
    <ArgumentIntEnumerated>
      <Name>NCPUS</Name>
      <Description>The total number of processors.</Description>
      <DisplayName>Number of Processors</DisplayName>
      <InputRequired>true</InputRequired>
      <Option default="true">2</Option>
      <Option>4</Option>
      <Option>6</Option>
      <Option>8</Option>
      <Option>10</Option>
      <Option>12</Option>
    </ArgumentIntEnumerated>
  </ArgumentChoice>
  <!-- PAS_NCPUS END -->
  <!-- PAS_PCPUS BEGIN -->
  <ArgumentChoice>
    <ArgumentIntEnumerated>
      <Name>PCPUS</Name>
      <Description>The total number of physical processors.</Description>
      <DisplayName>Number of Processors</DisplayName>
      <InputRequired>true</InputRequired>
      <Option default="true">2</Option>
      <Option>4</Option>
      <Option>6</Option>
      <Option>8</Option>
      <Option>10</Option>
      <Option>12</Option>
    </ArgumentIntEnumerated>
  </ArgumentChoice>
  <!-- PAS_PCPUS END -->
  <!-- PAS_MPIPROCS BEGIN -->
  <ArgumentChoice>
    <ArgumentIntEnumerated>
      <Name>MPIPROCS</Name>
      <Description>The total number of parallel processes.</Description>
      <DisplayName>MPI Processors</DisplayName>
      <InputRequired>false</InputRequired>
      <InputRequired>true</InputRequired>
      <Option default="true">2</Option>
      <Option>4</Option>
      <Option>6</Option>
      <Option>8</Option>
      <Option>10</Option>
      <Option>12</Option>
    </ArgumentIntEnumerated>
  </ArgumentChoice>
  <!-- PAS_MPIPROCS END -->
  <!-- PAS_OMPTHREADS BEGIN -->
  <ArgumentChoice>
    <ArgumentIntEnumerated>
      <Name>OMPTHREADS</Name>
      <Description>The total number of parallel processes.</Description>
      <DisplayName>OMP Threads</DisplayName>
      <InputRequired>false</InputRequired>
      <Option default="true">2</Option>
      <Option>4</Option>
      <Option>6</Option>
      <Option>8</Option>
      <Option>10</Option>
      <Option>12</Option>
    </ArgumentIntEnumerated>
  </ArgumentChoice>
  <!-- PAS_OMPTHREADS END -->
  <!-- PAS_MEM BEGIN -->
  <ArgumentChoice>
    <ArgumentInt>
      <Name>MEM</Name>
      <Description>The physical memory to request in gigabytes.</Description>
      <DisplayName>Physical Memory (GB)</DisplayName>
      <InputRequired>true</InputRequired>
      <LowerBound>1</LowerBound>
      <Value>1</Value>
    </ArgumentInt>
  </ArgumentChoice>
  <!-- PAS_MEM END -->
  <!-- PAS_VMEM BEGIN -->
  <ArgumentChoice>
    <ArgumentInt>
      <Name>VMEM</Name>
      <Description>The virtual memory to use.</Description>
      <DisplayName>Virtual Memory</DisplayName>
      <InputRequired>false</InputRequired>
      <LowerBound>1</LowerBound>
      <Value>1</Value>
    </ArgumentInt>
  </ArgumentChoice>
  <!-- PAS_MEM END -->
  <!-- PAS_WALLTIME BEGIN -->
  <ArgumentChoice>
    <ArgumentString>
      <Name>WALLTIME</Name>
      <Description>The desired walltime (length) of the job duration.</Description>
      <DisplayName>Walltime</DisplayName>
      <InputRequired>false</InputRequired>
    </ArgumentString>
  </ArgumentChoice>
  <!-- PAS_WALLTIME END -->
  <!-- PAS_ARCH BEGIN -->
  <ArgumentChoice>
    <ArgumentString>
      <Name>ARCH</Name>
      <Description>Specify which system architecture to run your job on.</Description>
      <DisplayName>Architecture</DisplayName>
      <InputRequired>true</InputRequired>
    </ArgumentString>
  </ArgumentChoice>
  <!-- PAS_ARCH END -->
  <!-- PAS_PLACE BEGIN -->
  <ArgumentChoice>
    <ArgumentStringEnumerated>
      <Name>PLACE</Name>
      <Description>The placement of job resources.</Description>
      <DisplayName>Placement of Resources</DisplayName>
      <InputRequired>false</InputRequired>
      <Option default="true">pack</Option>
      <Option>free</Option>
      <Option>scatter</Option>
      <Option>shared</Option>
    </ArgumentStringEnumerated>
  </ArgumentChoice>
  <!-- PAS_PLACE END -->
  <!-- Execution Options -->
  <!-- PAS_SITE_CONFIG_VERSIONS BEGIN -->
  <ArgumentChoice>
    <ArgumentStringEnumerated>
      <Name>VERSION</Name>
      <Description>Version of application to use.</Description>
      <DisplayName>Version</DisplayName>
      <InputRequired>true</InputRequired>
      <xi:include href="site-config.xml" xpointer="xpath1(//Application[@id='APP_NAME']/ApplicationVersions//Option)"/>
    </ArgumentStringEnumerated>
  </ArgumentChoice>
  <!-- PAS_SITE_CONFIG_VERSIONS END -->
  <!-- PAS_ENVIRONMENT BEGIN -->
  <ArgumentChoice>
    <ArgumentStringMulti>
      <Name>ENVIRONMENT</Name>
      <Description>A comma separated list of environment variables to make available to the job.</Description>
      <DisplayName>Job Environment</DisplayName>
      <InputRequired>false</InputRequired>
    </ArgumentStringMulti>
  </ArgumentChoice>
  <!-- PAS_ENVIRONMENT END -->
  <!-- PAS_APPLICATION_NAME BEGIN -->
  <ArgumentChoice>
    <ArgumentString>
      <Name>APPLICATION_NAME</Name>
      <Description>The name of your application.</Description>
      <DisplayName>Application Name</DisplayName>
      <InputRequired>true</InputRequired>
      <Value>APP_NAME</Value>
    </ArgumentString>
  </ArgumentChoice>
  <!-- PAS_APPLICATION_NAME END -->
  <!-- PAS_EXECUTABLE BEGIN -->
  <ArgumentChoice>
    <ArgumentString>
      <Name>EXECUTABLE</Name>
      <Description>A remote executable to run instead of a user supplied job script.</Description>
      <DisplayName>Application Executable</DisplayName>
      <InputRequired>true</InputRequired>
    </ArgumentString>
  </ArgumentChoice>
  <!-- PAS_EXECUTABLE END -->
  <!-- PAS_SCRIPT BEGIN -->
  <ArgumentChoice>
    <ArgumentFileName>
      <Name>SCRIPT</Name>
      <Description>A job script to run instead of a remote executable.</Description>
      <DisplayName>Job Script</DisplayName>
      <InputRequired>true</InputRequired>
    </ArgumentFileName>
  </ArgumentChoice>
  <!-- PAS_SCRIPT END -->
  <!-- PAS_ARGUMENTS BEGIN -->
  <ArgumentChoice>
    <ArgumentString>
      <Name>ARGUMENTS</Name>
      <Description>Pass specific arguments to the job script or remote executable.</Description>
      <DisplayName>Arguments</DisplayName>
      <InputRequired>false</InputRequired>
    </ArgumentString>
  </ArgumentChoice>
  <!-- PAS_ARGUMENTS END -->
  <!-- File Handling Options -->
  <!-- PAS_INPUT_FILE BEGIN -->
  <ArgumentChoice>
    <ArgumentFileName>
      <Name>INPUT_FILE</Name>
      <Description>
                A standalone input file or ZIP archive. This option supports the automatic detection of master, starter and engine files.
            </Description>
      <DisplayName>Input File</DisplayName>
      <InputRequired>false</InputRequired>
    </ArgumentFileName>
  </ArgumentChoice>
  <!-- PAS_INPUT_FILE END -->
  <!-- PAS_INCLUDE_FILES BEGIN -->
  <ArgumentChoice>
    <ArgumentFileNameMulti>
      <Name>INCLUDE_FILES</Name>
      <Description>Files to be included with the Job Script.</Description>
      <DisplayName>Include Files</DisplayName>
      <InputRequired>false</InputRequired>
    </ArgumentFileNameMulti>
  </ArgumentChoice>
  <!-- PAS_INCLUDE_FILES END -->
  <ArgumentChoice>
    <ArgumentDirectoryName>
      <Name>SUBMISSION_DIRECTORY</Name>
      <Description>Where your job files will initially be staged, and results will be returned upon job completion.</Description>
      <DisplayName>Staging Directory</DisplayName>
      <InputRequired>false</InputRequired>
    </ArgumentDirectoryName>
  </ArgumentChoice>
  <!-- PAS_COMPRESS_RESULTS BEGIN -->
  <ArgumentChoice>
    <ArgumentBooleanWithDescription>
      <Name>COMPRESS_RESULTS</Name>
      <Description>Compress job results into a single ZIP file.</Description>
      <DisplayName>Compress Results</DisplayName>
      <InputRequired>false</InputRequired>
    </ArgumentBooleanWithDescription>
  </ArgumentChoice>
  <!-- PAS_COMPRESS_RESULTS BEGIN -->
  <!-- Developer Options -->
  <!-- PAS_LOGGING BEGIN -->
  <ArgumentChoice>
    <ArgumentBooleanWithDescription>
      <Name>LOGGING</Name>
      <Description>Enable logging. Useful for development and debugging.</Description>
      <DisplayName>Logging</DisplayName>
      <InputRequired>false</InputRequired>
      <FeatureEnabled>true</FeatureEnabled>
    </ArgumentBooleanWithDescription>
  </ArgumentChoice>
  <!-- PAS_LOGGING END -->
</TemplateApplicationInput>
